---
import type { Page } from "astro";
export interface Props {
  pagination: Page<unknown>;
}

const {pagination} = Astro.props
---

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
    {
      pagination.url.prev && 
      <li class="page-item">
        <a class="page-link" href={pagination.url.prev}>
          {pagination.currentPage - 1}
        </a>
      </li>
    }

    <li class="page-item active">
      <a href={pagination.url.current} class="page-link">
        {pagination.currentPage}
      </a>
    </li>

    {
      pagination.url.next &&
      <li class="page-item">
        <a class="page-link" href={pagination.url.next}>
          {pagination.currentPage + 1}
        </a>
      </li>
    }
    
    </ul>
</nav>
